{% extends 'layout.twig' %}

{% block body %}
    <div class="p-10 bg-white rounded-2xl shadow-lg">
        <h1 class="font-semibold text-2xl">Our Holidays</h1>
    </div>
    <div class="p-10 bg-white rounded-2xl shadow-lg mt-10">
        <h2 class="font-semibold text-xl">Add new destination !</h2>
        <form class="flex flex-col pt-4" method="post" enctype="application/x-www-form-urlencoded">
            <input class="w-full bg-white shadow-lg rounded-xl border border-indigo-900 mb-4 p-4" type="text" name="title" placeholder="Title" />
            <textarea class="w-full h-32 bg-white shadow-lg rounded-xl border border-indigo-900 mb-4 p-4" name="content" placeholder="Content"></textarea>
            <div class="input-group-btn">
                <input class="bg-indigo-900 text-white rounded-xl shadow-lg px-4 py-2 cursor-pointer" type="submit" value="Upload" />
            </div>
        </form>
    </div>
    {% for article in articles %}
        <div class="p-10 bg-white rounded-2xl shadow-lg mt-10">
            <h2 class="font-semibold text-lg mb-2">{{ article.title }}</h2>
            <p>{{ article.content }}</p>
        </div>
    {% endfor %}
{% endblock %}
